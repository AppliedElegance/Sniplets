{
  "name": "__MSG_app_name__",
  "description": "__MSG_app_description__",
  "default_locale": "en",
  "version": "0.10.3",
  "manifest_version": 3,
  "icons": {
      "16": "icons/snip16.png",
      "20": "icons/snip20.png",
      "24": "icons/snip24.png",
      "32": "icons/snip32.png",
      "48": "icons/snip48.png",
      "64": "icons/snip64.png",
      "128": "icons/snip128.png"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "scripting",
    "activeTab",
    "contextMenus",
    "commands"
  ],
  "optional_host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_title": "__MSG_app_command_open__",
    "default_popup": "popup/main.html?popout=true"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+X"
      },
      "description": "__MSG_app_command_open__"
    },
    "snip": {
      "suggested_key": {
        "default": "Alt+Shift+C"
      },
      "description": "__MSG_app_command_copy__"
    }
  }
}