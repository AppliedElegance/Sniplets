{
  "name": "__MSG_app_name__",
  "description": "__MSG_app_description__",
  "default_locale": "en",
  "version": "0.10.1",
  "manifest_version": 3,
  "icons": {
      "16": "icons/snip16.png",
      "20": "icons/snip20.png",
      "24": "icons/snip24.png",
      "32": "icons/snip32.png",
      "48": "icons/snip48.png",
      "64": "icons/snip64.png",
      "128": "icons/snip128.png"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "scripting",
    "activeTab",
    "contextMenus"
  ],
  "optional_host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_popup": "popups/main.html?popout=true"
  }
}